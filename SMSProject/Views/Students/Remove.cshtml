@model SMSProject.Models.ApplicationUser

<h1>Remove Student</h1>

<h3>Are you sure you want to remove this student?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Date of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.BOD.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.Number
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Course
        </dd>
    </dl>

    <form method="post" asp-action="Remove">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Remove</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
